{
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  }
}
